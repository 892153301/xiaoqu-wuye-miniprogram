.form-card {
  background: var(--white);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 16rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 40rpx;
  text-align: center;
}

.type-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.type-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border: 2rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
  color: var(--text-secondary);
}

.type-tab.active {
  border-color: var(--primary);
  background: #f6ffed;
  color: var(--primary);
  font-weight: bold;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item .label {
  font-size: 30rpx;
  color: var(--text);
  display: block;
  margin-bottom: 16rpx;
}

.textarea {
  width: 100%;
  height: 240rpx;
  padding: 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.char-count {
  font-size: 24rpx;
  color: var(--text-muted);
  text-align: right;
  display: block;
  margin-top: 8rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 32rpx;
  text-align: center;
  background: var(--danger);
  color: var(--white);
  border-radius: 50%;
  font-size: 28rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn .icon {
  font-size: 48rpx;
  color: var(--text-muted);
  line-height: 1;
}

.upload-btn .tip {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}

.input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
}

.btn-submit {
  background: var(--primary);
  color: var(--white);
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  margin-top: 40rpx;
}

.history-section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.history-card {
  background: var(--white);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-tags {
  display: flex;
  gap: 12rpx;
}

.tag-type {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tag-type.complaint {
  background: #fff2f0;
  color: var(--danger);
}

.tag-type.suggestion {
  background: #e6f7ff;
  color: #1890ff;
}

.tag-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tag-status.pending {
  background: #fffbe6;
  color: #faad14;
}

.tag-status.processing {
  background: #e6f7ff;
  color: #1890ff;
}

.tag-status.resolved {
  background: #f6ffed;
  color: #52c41a;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-muted);
}

.history-content {
  font-size: 28rpx;
  color: var(--text);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.history-reply {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.reply-label {
  font-size: 26rpx;
  color: var(--primary);
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.reply-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}
