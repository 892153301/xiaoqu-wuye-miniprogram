.house-info-card {
  background: linear-gradient(135deg, #07c160, #10b981);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  color: var(--white);
}

.label {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 12rpx;
}

.value {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.owner {
  font-size: 26rpx;
  opacity: 0.9;
}

.bill-section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.bill-card {
  background: var(--white);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.bill-card.paid {
  opacity: 0.9;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bill-type {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
}

.bill-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.bill-status.unpaid {
  background: #fff2f0;
  color: var(--danger);
}

.bill-status.paid {
  background: #f6ffed;
  color: #52c41a;
}

.bill-period {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

.bill-amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-top: 1rpx solid var(--border);
  border-bottom: 1rpx solid var(--border);
  margin-bottom: 20rpx;
}

.amount-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.amount-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--danger);
}

.bill-deadline {
  font-size: 26rpx;
  color: var(--text-muted);
  margin-bottom: 24rpx;
}

.bill-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 26rpx;
  color: var(--text-muted);
  margin-bottom: 24rpx;
}

.btn-pay {
  background: var(--primary);
  color: var(--white);
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 0;
}

.btn-pay:active {
  background: var(--primary-dark);
}

.btn-invoice {
  background: var(--white);
  color: var(--primary);
  border: 1rpx solid var(--primary);
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin: 0;
}
