.banner {
  height: 360rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(transparent, rgba(0,0,0,0.6));
  color: #fff;
  font-size: 32rpx;
}

.quick-entry {
  display: flex;
  justify-content: space-around;
  background: var(--white);
  margin: 20rpx;
  padding: 40rpx 20rpx;
  border-radius: 16rpx;
}

.entry-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.entry-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.entry-icon.payment { background: #fff2f0; }
.entry-icon.repair { background: #e6f7ff; }
.entry-icon.visitor { background: #f6ffed; }
.entry-icon.complaint { background: #fffbe6; }

.entry-text {
  font-size: 26rpx;
  color: var(--text);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
}

.more {
  font-size: 26rpx;
  color: var(--text-muted);
}

.todo-section {
  background: var(--white);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.bill-item:last-child {
  border-bottom: none;
}

.bill-info {
  display: flex;
  flex-direction: column;
}

.bill-type {
  font-size: 30rpx;
  color: var(--text);
  margin-bottom: 8rpx;
}

.bill-period {
  font-size: 24rpx;
  color: var(--text-muted);
}

.bill-amount {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--danger);
  margin-bottom: 8rpx;
}

.status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.status.unpaid {
  background: #fff2f0;
  color: var(--danger);
}

.notice-section {
  background: var(--white);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.notice-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.notice-item:last-child {
  border-bottom: none;
}

.notice-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-tag:first-child {
  background: #fff2f0;
  color: var(--danger);
}

.notice-tag.notice {
  background: #e6f7ff;
  color: #1890ff;
}

.notice-tag.maintain {
  background: #fffbe6;
  color: #faad14;
}

.notice-tag.activity {
  background: #f6ffed;
  color: #52c41a;
}

.notice-title {
  flex: 1;
  font-size: 30rpx;
  color: var(--text);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.notice-time {
  font-size: 24rpx;
  color: var(--text-muted);
  flex-shrink: 0;
}

.house-card {
  background: linear-gradient(135deg, #07c160, #10b981);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  color: var(--white);
}

.house-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.house-title {
  font-size: 32rpx;
  font-weight: bold;
}

.house-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 8rpx;
}

.house-info {
  margin-bottom: 20rpx;
}

.house-address {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 12rpx;
}

.house-area {
  font-size: 26rpx;
  opacity: 0.9;
}

.house-owner {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  opacity: 0.9;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255,255,255,0.2);
}
