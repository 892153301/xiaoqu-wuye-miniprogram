.form-card {
  background: var(--white);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 16rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item .label {
  font-size: 30rpx;
  color: var(--text);
  display: block;
  margin-bottom: 16rpx;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
  color: var(--text);
}

.picker.placeholder {
  color: var(--text-muted);
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.char-count {
  font-size: 24rpx;
  color: var(--text-muted);
  text-align: right;
  display: block;
  margin-top: 8rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 32rpx;
  text-align: center;
  background: var(--danger);
  color: var(--white);
  border-radius: 50%;
  font-size: 28rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn .icon {
  font-size: 48rpx;
  color: var(--text-muted);
  line-height: 1;
}

.upload-btn .tip {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 8rpx;
}

.btn-submit {
  background: var(--primary);
  color: var(--white);
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  margin: 40rpx 0 24rpx;
}

.btn-cancel {
  background: var(--white);
  color: var(--text-secondary);
  border: 1rpx solid var(--border);
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 0;
}

.btn-new {
  background: var(--primary);
  color: var(--white);
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin: 20rpx;
}

.repair-list {
  padding: 0 20rpx;
}

.repair-card {
  background: var(--white);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.repair-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.repair-type {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
}

.repair-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.repair-status.pending {
  background: #fffbe6;
  color: #faad14;
}

.repair-status.processing {
  background: #e6f7ff;
  color: #1890ff;
}

.repair-status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.repair-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.repair-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: var(--text-muted);
}
