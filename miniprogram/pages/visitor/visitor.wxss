.form-card {
  background: var(--white);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 16rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item .label {
  font-size: 30rpx;
  color: var(--text);
  display: block;
  margin-bottom: 16rpx;
}

.input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
  color: var(--text);
}

.picker.placeholder {
  color: var(--text-muted);
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx;
  border: 1rpx solid var(--border);
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.btn-submit {
  background: var(--primary);
  color: var(--white);
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 8rpx;
  font-size: 34rpx;
  margin-top: 40rpx;
}

.record-section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.record-card {
  background: var(--white);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.visitor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text);
}

.record-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.record-status.pending {
  background: #fffbe6;
  color: #faad14;
}

.record-status.approved {
  background: #f6ffed;
  color: #52c41a;
}

.record-status.expired {
  background: #f5f5f5;
  color: var(--text-muted);
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border);
}

.record-no {
  font-size: 28rpx;
  color: var(--primary);
  font-weight: bold;
}

.btn-share {
  background: #e6f7ff;
  color: #1890ff;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin: 0;
}
